@model IEnumerable<BankUI.Models.StatementDto>

@{
    ViewData["Title"] = "GetAllStatementView";
}
@{
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
}
<html>
<head>
    <style>
        #customers {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #customers td, #customers th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #customers tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #customers tr:hover {
                background-color: #ddd;
            }

            #customers th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #0000ff;
                color: white;
            }

        body {
            background-color: #F0F8FF;
            font-family: "Roboto", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }
    </style>
</head>
<body>

    <h4>Transaction Statements</h4>


    <table class="table" id="customers">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ref)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Withdrawal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deposite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClosingBalance)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ref)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Withdrawal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deposite)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClosingBalance)
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="CustomerMenu">Back to Menu</a>
    </div>



</body>


</html>

